# Environment variables for Forgotten Depths MUD

# Server Configuration
MUD_HOST=localhost
MUD_PORT=4000
WEB_HOST=0.0.0.0
WEB_PORT=8080

# Database Configuration
DATABASE_PATH=data/mud.db

# Security
SECRET_KEY=your-secret-key-here
DEBUG=False

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/server.log

# Game Settings
STARTING_ROOM=town_square
MAX_PLAYERS=100
SAVE_INTERVAL=60

# Web Client Settings
WEB_CLIENT_ENABLED=true

# Development Settings (for development only)
DEV_MODE=false
AUTO_RELOAD=false